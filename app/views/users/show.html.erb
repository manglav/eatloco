<h3>User</h3>
<p>User: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<h3>My Dishes (<%= link_to "Create New Dish", new_dish_url %>)</h3>

	<ul class="thumbnails">
	<% @user.dishes.each do |dish| %>
		<li class="span3">
			<div class="thumbnail">
				<%= filepicker_image_tag dish.photos.first.url, w: 160, h: 160, fit: 'clip' %>
				<p><%= link_to dish.name, dish %></p>
	    	<p><%= link_to "Edit", edit_dish_url(dish) %></p>
	    	<p><%= link_to "Destroy", dish_url(dish), method: :delete, data: { confirm: 'Are you sure?' } %></p>
			</div>
		</li>
	<% end %>
	</ul>

